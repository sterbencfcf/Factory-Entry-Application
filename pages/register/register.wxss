/* 注册页面 */
.title1,.title2 {
  margin: 90rpx 0 0 40rpx;
}
.input_content_all {
  /* height: 840rpx; */
  margin: 75rpx 0 0 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* overflow-y: scroll; */
}
.input_content {
  width: 660rpx;
  height: 96rpx;
  background: #FFFFFF;
  border-radius: 16rpx 16rpx 16rpx 16rpx;
  margin-bottom: 32rpx;
  padding: 0 32rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.icon{
  width: 48rpx;
  height: 48rpx;
}

.input {
  font-size: 32rpx;
  width: 484rpx;
  height: 96rpx;
}
.btn {
  margin: 32rpx auto 32rpx;
  width: 660rpx;
  height: 96rpx;
  background: linear-gradient(270deg, #0788FF 0%, #4BA9FF 100%);
  border-radius: 12rpx 12rpx 12rpx 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
  line-height: 96rpx;
}
.btn_hover {
  background-color: rgb(215, 217, 228);
}
.title_down {
  font-size: 28rpx;
  color: rgba(0,0,0,0.9);
  text-align: center;
}
.title_down2{
  display: inline-block;
  font-size: 28rpx;
  color: #0052D9;
}