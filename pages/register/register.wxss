}

.choosebtn {
  margin: 196rpx 0 0 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.choosebtn_content {
  width: 660rpx;
  height: 188rpx;
  background: #FFFFFF;
  border-radius: 16rpx 16rpx 16rpx 16rpx;
