/* 选择页面 */
.choose_page {
  position: absolute;
  left: 0;
  top: 92rpx;
  width: 100%;
  height: calc(100% - 92rpx);
}
.title {
  margin: 134rpx 0 0 40rpx;
}
.title_up {
  /* font-family: 思源黑体; */
  font-size: 56rpx;
  font-weight: 600;
  color: rgba(0,0,0,0.9);
  line-height: 72rpx;
}
.title_up2{
  font-size: 40rpx;
  font-weight: 500;
}
.loginlogo_pic{
  width: 478rpx;
  height: 148rpx;
  margin: 10rpx 0 0 0;
  position: absolute;
