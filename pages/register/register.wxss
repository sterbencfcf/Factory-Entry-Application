.choose1,.choose2{
  width: 100%;
  height: 100%;
}
.choose1_text,.choose2_text{
  font-size: 36rpx;
  font-weight: 600;
  color: #000000;
  position: absolute;
  top: 70rpx;
  left: 264rpx;
}
