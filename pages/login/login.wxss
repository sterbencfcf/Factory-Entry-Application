page {
  height: 100%;
}
.logintop_pic{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 92rpx;
}
.loginbg_pic{
  position: absolute;
  left: 0;
  top: 92rpx;
  width: 100%;
  height: calc(100% - 92rpx);
}
.loginForm {
  position: absolute;
  left: 0;
  top: 92rpx;
  width: 100%;
  height: calc(100% - 92rpx);
}
.title{
  margin: 134rpx 0 0 40rpx;
}
.title_up {
  /* font-family: 思源黑体; */
  font-size: 56rpx;
  font-weight: 600;
  color: rgba(0,0,0,0.9);
  line-height: 72rpx;
}
.title_up2{
  font-size: 40rpx;
}

.loginlogo_pic{
  width: 478rpx;
  height: 148rpx;
  margin: 10rpx 0 0 0;
  position: absolute;
  right: 0;
}
.input_content_all {
  margin: 196rpx 0 0 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.input_content {
  width: 660rpx;
  height: 96rpx;
  background: #FFFFFF;
  border-radius: 16rpx 16rpx 16rpx 16rpx;
  margin-bottom: 32rpx;
  padding: 0 32rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.icon{
  width: 48rpx;
  height: 48rpx;
}

.input {
  font-size: 32rpx;
  width: 484rpx;
  height: 96rpx;
}
.btn {
  margin: 96rpx auto 32rpx;
  width: 660rpx;
  height: 96rpx;
  background: linear-gradient(270deg, #0788FF 0%, #4BA9FF 100%);
  border-radius: 12rpx 12rpx 12rpx 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
  line-height: 96rpx;
}
.btn_hover {
  background-color: rgb(215, 217, 228);
}
.title_down {
  font-size: 28rpx;
  color: rgba(0,0,0,0.9);
  text-align: center;
}
.title_down2{
  display: inline-block;
  font-size: 28rpx;
  color: #0052D9;
}
