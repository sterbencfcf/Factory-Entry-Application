.bg_pic {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: calc(100% - 92rpx);
}

.body {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: calc(100% - 92rpx - 50px);
  /* height: 89%; */
  margin-top: 184rpx;
}

/* 用户信息 */
.userArea {
  display: flex;
  justify-content: center;
}

.userInfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo_pic {
  width: 156rpx;
  height: 156rpx;
  background: #F0F0F0;
  box-shadow: 0rpx 20rpx 60rpx 0rpx rgba(7, 136, 255, 0.3);
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, 0.8);
}

.userinfo_name {
  font-weight: 700;
  font-size: 48rpx;
  color: #000000;
  margin-top: 30rpx;
}

.userinfo_department {
  font-size: 32rpx;
  color: #435B69;
  margin-top: 20rpx;
}

/* 功能区 */
.downArea {
  margin: 58rpx 32rpx 0;
  background: #FFFFFF;
  width: 686rpx;
  height: 224rpx;
  border-radius: 24rpx;
  padding-left: 32rpx;
  box-sizing: border-box;
}

.func {
  width: 100%;
  height: 112rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.funcone {
  border-bottom: 1rpx solid #E7E7E7;
}

.left {
  display: flex;
  align-items: center;
}

.icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 24rpx;
}

.func_text {
  font-size: 32rpx;
  color: rgba(0, 0, 0, 0.9);
  display: inline-block;
}

.func_icon {
  font-size: 48rpx !important;
  margin-right: 32rpx;
  color: #999999;
}

/* 联系区 */
.namearea {
  display: flex;
  flex-direction: column;
  text-align: center;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 200rpx;
  margin: auto;
  font-size: 26rpx;
  color: #a3a3a3;
}