}

/* tab组件 */
.van-tabs__wrap {
  height: 96rpx !important;
  margin-top: -9px;
  border-radius: 18rpx 18rpx 0rpx 0rpx !important;
}

.van-tabs__scroll {
  margin: 0 !important;
  width: 100% !important;
  height: 100% !important;
  border: 0 !important;
}

.van-tabs__nav {
  height: 100% !important;
  background: #E1F2FF !important;
  /* border-radius:16rpx 16rpx 0rpx 0rpx !important; */
}

.van-tab {
  background-color: #E1F2FF !important;
  border-color: transparent !important;
  font-size: 32rpx !important;
  color: #667583 !important;
  line-height: 96rpx !important;
}

.van-tab--active {
  background-color: #fff !important;
  font-weight: 600 !important;
  color: #0788FF !important;
}

.van-tabs__nav .van-tab:first-child {
  border-radius: 18rpx 18rpx 18rpx 0rpx;
}

.van-tabs__nav .van-tab:last-child {
  border-radius: 18rpx 18rpx 0rpx 18rpx;
}

.van-tab--active.van-tab:first-child {
  border-radius: 18rpx 18rpx 0rpx 0rpx !important;
}

.van-tab--active.van-tab:last-child {
  border-radius: 18rpx 18rpx 0rpx 0rpx !important;
}

