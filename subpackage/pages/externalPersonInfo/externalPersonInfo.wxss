page {
  height: 100%;
  background: #F5F6F7;
}
/* 功能区 */
.funcArea {
  position: fixed;
  bottom: 182rpx;
  right: 16rpx;
}
.addBtn {
  box-shadow: 0 8px 20px 0 rgb(0, 0, 0, 10%);
  width: 264rpx;
  height: 96rpx;
  background: linear-gradient(270deg, #0788FF 0%, #4BA9FF 100%);
  color: #fff;
  border-radius: 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.addBtn_icon {
  font-size: 48rpx;
  margin-right: 8rpx;
}
.addBtn_text {
  font-weight: 600;
  font-size: 32rpx;
  color: #FFFFFF;
}
/* 信息区 */
.infoArea {
  height: 85%;
  padding: 32rpx 32rpx 32rpx;
  box-sizing: border-box;
}
.list {
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.infoCard {
    width: 100%;
    padding: 32rpx 34rpx 22rpx 32rpx;
    box-sizing: border-box;
    height: 324rpx;
    background: #FFFFFF;
    border-radius: 24rpx;
    margin-bottom: 24rpx;
}
.line1 {
  display: flex;
}
.line1_name {
  width: 108rpx;
  height: 108rpx;
  border-radius: 50%;
  /* background: #3FA3FF; */
  font-size: 28rpx;
  color: #FFFFFF;
  text-align: center;
  line-height: 108rpx;
}
.line1_right {
  margin-left: 28rpx;
  width: calc(100% - 136rpx);
}
.fontSize28{
  font-size: 28rpx;
}
.fontSize20{
  font-size: 20rpx;
}
.line1_phone,.line1_identity{
  color: #000;
  font-weight: 600;
  margin-bottom: 8rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.text1{
  color: #666666;
  font-weight: 600;
}
.line2 {
  display: flex;
  gap: 16rpx;
  margin-top: 22rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.van-divider{
  margin: 32rpx 0 16rpx 0 !important;
}
.line3 {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.person{
  margin-right: 16rpx;
  width: 36rpx;
  height: 36rpx;
  vertical-align: text-top;
}
.line3_text {
  color: #999;
}
.line3_btn {
  width: 136rpx;
  height: 64rpx;
  background: #FFFFFF;
  border-radius: 60rpx 60rpx 60rpx 60rpx;
  border: 2rpx solid #DADADA;
  text-align: center;
  line-height: 64rpx;
  color: #666666;
}


.infoCard:nth-child(4n+1) .line1_name{
  background: #3FA3FF;
}
.infoCard:nth-child(4n+2) .line1_name{
  background: #00C777;
}
.infoCard:nth-child(4n+3) .line1_name{
  background: #4B7EFF;
}
.infoCard:nth-child(4n) .line1_name{
  background: #FF8C4B;
}