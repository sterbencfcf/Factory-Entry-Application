page {
  height: 100%;
  background: #F5F6F7;
}

.scrollArea {
  width: 100%;
  height: 78%;
  overflow-y: scroll;
}
.scroll_contain {
  background-color: #fff;
  margin-bottom: 24rpx;
}
.blueBox{
  width: 8rpx;
  height: 36rpx;
  background: #0788FF;
  border-radius: 4rpx 4rpx 4rpx 4rpx;
  display: inline-block;
  margin-right: 16rpx;
}
.text {
  font-weight: 600;
  font-size: 40rpx;
  color: rgba(0,0,0,0.9);
  display: flex;
  align-items: center;
  width: 750rpx;
  height: 112rpx;
  padding-left: 32rpx;
  box-sizing: border-box;
}
.title {
  display: flex;
  justify-content: space-between;
  padding: 26rpx;
}
.title_leftBtn {
  height: 60rpx;
  padding: 0 20rpx;
  border: 4rpx solid #585ce5;
  border-radius: 15rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 36rpx;
}
.title_rightBtn {
  background-color: #585ce5;
  color: white;
  width: auto;
  height: 60rpx;
  padding: 0 20rpx;
  font-size: 36rpx;
  border: 4rpx solid #585ce5;
  border-radius: 15rpx;
  text-align: center;
  line-height: 60rpx;
}
.list {
  width: 100%;
  height: 82%;
  overflow: scroll;
}
.value-class {
  flex: none !important;
}
.bas_info_content {
  overflow: hidden;
}
/* 最下方按钮 */
.chooseArea {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 160rpx;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  text-align: center;
  background: #FFFFFF;
}
.chooseBtn {
  width: 327rpx;
  height: 96rpx;
  border-radius: 12rpx 12rpx 12rpx 12rpx;
  line-height: 96rpx;
  font-size: 32rpx;
  font-weight: 600;
}
.chooseBtn1 {
  border: 2rpx solid #DCDCDC;
  background: #F4F4F4;
  color: rgba(0,0,0,0.9);
}
.chooseBtn2 {
  background: linear-gradient( 270deg, #0788FF 0%, #4BA9FF 100%), #0052D9;
  color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
}
.icon{
  margin-right: 8rpx;
  width: 44rpx;
  height: 44rpx;
}
.chooseBtn1_hover {
  background-color: rgba(128, 128, 128, 0.1);
}

/* 基本信息 */
.van-field__label{
  /* font-size: 32rpx; */
  color: rgba(0,0,0,0.9) !important;
}
.info_line{
  padding-left: 24rpx;
}
.van-cell__title{
  margin-right: 20px !important;
}
